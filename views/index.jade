extend layout

block content
  if session.email
    form(method='post', id='add-chat-form')
      input(type='hidden', name='picture', id='picture')
      .message-content
        input(type='text', name='message', id='add-chat', class='input', autocomplete='off', placeholder='Send a public message')
        #add-chat-blocker.hidden
          span Sending, please wait!
      .footer

